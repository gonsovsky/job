{
  "compilerOptions": {
    "inlineSources": true,
    "sourceMap": true,

    "declaration": true,
    "declarationDir": "./dist",
    "module": "CommonJS",
    "noImplicitAny": true,
    "lib": ["es2017", "es7", "es6"],
    "outDir": "./dist",
    "target": "es5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "typedocOptions": {
    "module": "modules",
    "out": "docs",
  },
  "include": [
    "./src/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
